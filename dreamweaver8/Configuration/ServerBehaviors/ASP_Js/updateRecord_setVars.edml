     <quickSearch><![CDATA[MM_update]]></quickSearch>
     <insertText location="aboveHTML+20">
<![CDATA[
<%
// *** Update Record: set variables

if (String(Request("MM_update")) == "@@formName@@" &&
    String(Request("MM_recordId")) != "undefined") {

  var MM_editConnection = MM_@@cname@@_STRING;
  var MM_editTable  = "@@table@@";
  var MM_editColumn = "@@col@@";
  var MM_recordId = "@@colQuote@@" + Request.Form("MM_recordId") + "@@colQuote@@";
  var MM_editRedirectUrl = "@@redirect__url@@";
  var MM_fieldsStr = "@@fieldsStr@@";
  var MM_columnsStr = "@@columnsStr@@";

  // create the MM_fields and MM_columns arrays
  var MM_fields = MM_fieldsStr.split("|");
  var MM_columns = MM_columnsStr.split("|");
  
  // set the form values
  for (var i=0; i+1 < MM_fields.length; i+=2) {
    MM_fields[i+1] = String(Request.Form(MM_fields[i]));
  }

  // append the query string to the redirect URL
  if (MM_editRedirectUrl && Request.QueryString && Request.QueryString.Count > 0) {
    MM_editRedirectUrl += ((MM_editRedirectUrl.indexOf('?') == -1)?"?":"&") + Request.QueryString;
  }
}
%>
]]>
