<formats id="DWMenu_Formats">
	<menu name = "Date/Time" id="DWMenu_Formats_DATETIME">

		<format	file="Formatters/DateTime.as"
		        menuName="General Date Format"
				panelName="Date/Time - General Date Format"
				expression="DateFormat(#item#)"
				id="DWMenu_Format_DT1"/>

		<format	file="Formatters/DateTime.as"
		        menuName="Monday, January 17, 2000"
				panelName="Date/Time - Monday, January 17, 2000"
				expression="DateFormat(#item#, &quot;DDDD, MMMM DD, YYYY&quot;)"
				id="DWMenu_Format_DT2"/>

		<format	file="Formatters/DateTime.as"
		        menuName="17 January 2000"
				panelName="Date/Time - 17 January 2000"
				expression="DateFormat(#item#, &quot;DD MMMM YYYY&quot;)"
				id="DWMenu_Format_DT3"/>

		<format	file="Formatters/DateTime.as"
		        menuName="January 17, 2000"
				panelName="Date/Time - January 17, 2000"
				expression="DateFormat(#item#, &quot;MMMM DD, YYYY&quot;)"
				id="DWMenu_Format_DT4"/>

	</menu>

	<menu name = "AlphaCase" id="DWMenu_Format_ALPHACASE">

		<format	file="Formatters/AlphaCase.as"
				menuName="Lower"
				panelName="AlphaCase - Lower"
				expression="LCase(#item#)"
				id="DWMenu_Format_AlphaLower"/>

		<format	file="Formatters/AlphaCase.as"
				menuName="Upper"
				panelName="AlphaCase - Upper"
				expression="UCase(#item#)"
				id="DWMenu_Format_AlphaUpper"/>

	</menu>

    <separator />

	<format	file="Formatters/StringOps.as"
			menuName="Reverse String"
			panelName="Reverse String"
			expression="ReverseString(#item#)"
			id="DWMenu_Format_Reverse"/>
	
</formats>
