<!-- ASP/JavaScript ---------------------------------------------------------->
  <implementation serverModel="ASP/JavaScript">
     <insertText location="afterSelection">
<![CDATA[
    <textarea name="@@fieldName@@" cols="50" rows="5">@@fieldVal@@</textarea>
]]>
     </insertText>
  </implementation>
  
